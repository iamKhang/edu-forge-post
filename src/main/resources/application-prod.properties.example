# Production Environment Configuration Example
# Rename this file to application-prod.properties and fill in your actual values

# MongoDB Atlas Configuration
spring.data.mongodb.uri=mongodb+srv://${MONGODB_USERNAME}:${MONGODB_PASSWORD}@${MONGODB_CLUSTER}/${MONGODB_DATABASE}?retryWrites=true&w=majority
spring.data.mongodb.database=${MONGODB_DATABASE}
spring.data.mongodb.auto-index-creation=true

# Logging for Production
logging.level.org.springframework.data.mongodb.core.MongoTemplate=INFO
logging.level.org.springframework.web=INFO

# Other Production Settings
server.tomcat.max-threads=200
server.tomcat.max-connections=10000
